    <!-- Custom styles for this template -->
    <link href="css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="css/responsive.css" rel="stylesheet" />

</head>

<body>
    {{> 'partials/navbar' }}
    <div class="container">
        <h1 class="text-center">Obrigado pela preferência!!</h1>
        <hr>
        <div class="row mt-5 mb-5">
            <div class="col">
                <div class="container">
                    <h2>Login</h2>
                    <hr>
                    <form id="login-form">
                        <input name="username" class="form-control form-control-lg mt-2" type="text"
                            placeholder="Username" aria-label=".form-control-lg example">
                        <input name="password" class="form-control form-control-lg mt-2" type="password"
                            placeholder="Password" aria-label=".form-control-lg example">
                        <hr>
                        <a href="#" class="mt-4" style="margin-top: 5px;">Criar uma conta agora</a>
                        <button type="button" onclick="new Checkout().sendCheckout()" class="btn btn-warning mt-4"
                            style="width: 100%;">Login</button>
                    </form>
                </div>
            </div>
            <div class="col">
                <h2>Compra sem Login</h2>
                <hr>
                <form id="checkout-form">
                    <select class="form-select form-control form-control-lg mt-2" aria-label="Default select example">
                        <option selected>Selecione o ponto de entrega</option>
                        {{#each delivery}}
                        <option value="1">{{this.state}} - {{this.neighborhood}}</option>
                        {{/each}}
                    </select>
                    <input name="address" class="form-control form-control-lg mt-2" type="text" placeholder="Rua"
                        aria-label=".form-control-lg example">
                    <input name="homeNumber" class="form-control form-control-lg mt-2" type="text" placeholder="Numero"
                        aria-label=".form-control-lg example">
                    <input name="observation" class="form-control form-control-lg mt-2" type="text"
                        placeholder="Ponto de Referência" aria-label=".form-control-lg example">
                    <button type="button" onclick="new Checkout().sendCheckout()" class="btn btn-warning mt-4" style="width: 100%;">Finalizar
                        Pedido</button>
                </form>
            </div>
        </div>
    </div>
    {{>'partials/footer'}}



    <!-- bootstrap js -->
    {{!--
    <script src="js/bootstrap.js"></script> --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>


    <script src="js/toasts.js"></script>
    <script src="js/checkout.js"></script>
