    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="images/favicon.png" type="">

    <title> {{title}} </title>

    <!-- bootstrap core css -->
    {{!--
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css" /> --}}
